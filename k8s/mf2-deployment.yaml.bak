apiVersion: apps/v1
kind: Deployment
metadata:
  name: mf2-vue
  labels:
    app: mf2-vue
    tier: frontend
spec:
  replicas: 2
  selector:
    matchLabels:
      app: mf2-vue
  template:
    metadata:
      labels:
        app: mf2-vue
        tier: frontend
    spec:
      containers:
      - name: mf2-vue
        image: gcr.io/YOUR_PROJECT_ID/mf2-vue:latest
        ports:
        - containerPort: 80
          name: http
        resources:
          requests:
            memory: "64Mi"
            cpu: "50m"
          limits:
            memory: "128Mi"
            cpu: "100m"
        livenessProbe:
          httpGet:
            path: /
            port: 80
          initialDelaySeconds: 10
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /
            port: 80
          initialDelaySeconds: 5
          periodSeconds: 5
